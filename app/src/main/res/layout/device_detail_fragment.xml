<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/device_detail_icon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_phone_android"
        android:contentDescription="@string/label_address"/>

    <LinearLayout
        android:layout_below="@id/device_detail_icon"
        android:id="@+id/device_detail_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/device_connect_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/label_connect"/>

        <Button
            android:id="@+id/device_disconnect_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:text="@string/label_disconnect"/>
    </LinearLayout>

    <TextView
        android:id="@+id/device_detail_name"
        android:layout_below="@id/device_detail_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_below="@id/device_detail_name"
        android:id="@+id/device_detail_address_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_address"/>

        <TextView
            android:id="@+id/device_detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/device_detail_address_row"
        android:id="@+id/device_detail_status_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_status"/>


        <TextView
            android:id="@+id/device_detail_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>